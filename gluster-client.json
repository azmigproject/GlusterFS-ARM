{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmssName": {
      "type": "string",
      "metadata": {
        "description": "Master VMSS name."
      },
      "maxLength": 15
    },
    "nodeCount": {
      "type": "int",
      "metadata": {
        "description": "Number of gluster nodes (100 or less)."
      },
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 100

    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Standard_DS3_v2",
      "allowedValues": [
        "Standard_DS1",
        "Standard_DS2",
        "Standard_DS3",
        "Standard_DS4",
        "Standard_DS11",
        "Standard_DS12",
        "Standard_DS13",
        "Standard_DS14",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2",
        "Standard_F1s",
        "Standard_F2s",
        "Standard_F4s",
        "Standard_F8s",
        "Standard_F16s",
        "Standard_GS1",
        "Standard_GS2",
        "Standard_GS3",
        "Standard_GS4",
        "Standard_GS5",
        "Standard_L4s",
        "Standard_L8s",
        "Standard_L16s",
        "Standard_L32s"
      ],
      "metadata": {
        "description": "sku to use for the storage nodes - only premium disks VMs are allowed"
      }
    },
    "VMImage": {
      "type": "string",
      "defaultValue": "CentOS_7.3",
      "allowedValues": [
        "CentOS_7.2",
        "CentOS_7.3"
      ],
      "metadata": {
        "description": "VM Image."
      }
    },
    "Vnet/Subnet": {
      "type": "string",
      "defaultvalue": "new",
      "allowedValues": [
        "new",
        "existing"
      ],
      "metadata": {
        "description": "vnet and subnet to use existing or create your own"
      }
    },
    "new/existingVnetName": {
      "type": "string",
      "metadata": {
        "description": "existing vnet name."
      }
    },
    "new/existingSubnetName": {
      "type": "string",
      "metadata": {
        "description": "existing subnet name"
      }
    },
    "subnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "existing subnet name"
      }
    },
    "addressPrefix": {
      "type": "string",
      "metadata": {
        "description": "existing subnet name"
      }
    },
    "masterName": {
      "type": "string",
      "metadata": {
        "description": "Mastername for NFS setup."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username on all VMs."
      }
    },
    "sshKeyData": {
      "type": "string",
      "metadata": {
        "description": "SSH rsa public key file as a string."
      }
    }
  },
  "variables": {
    "addressPrefix": "10.0.0.0/16",
    "subnetPrefix": "10.0.0.0/24",
    "deploymentApiVersion": "2015-01-01",
    "virtualNetworkName": "gluster-vnet",
    "rgname": "[resourceGroup().name]",
    "masterName": "[parameters('masterName')]",
    "subnetName": "gluster-subnet",
    "Vnet/Subnet": "[parameters('Vnet/Subnet')]",
    "publicIPAddressName": "[concat(parameters('vmssName'), 'pip')]",
    "loadBalancerName": "[concat(parameters('vmssName'), 'lb')]",
    "publicIPAddressID": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]",
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',variables('loadBalancerName'))]",
    "natPoolName": "[concat(parameters('vmssName'), 'natpool')]",
    "bePoolName": "[concat(parameters('vmssName'), 'bepool')]",
    "natStartPort": 50000,
    "natEndPort": 52000,
    "natBackendPort": 22,
    "nicName": "[concat(parameters('vmssName'), 'nic')]",
    "ipConfigName": "[concat(parameters('vmssName'), 'ipconfig')]",
    "frontEndIPConfigID": "[concat(variables('lbID'),'/frontendIPConfigurations/loadBalancerFrontEnd')]",
    "networkApiVersion": "2016-06-01",
    "insightsApiVersion": "2015-04-01",
    "location": "[resourceGroup().location]",
    "installLIS": "bash InstallLIS.sh",
    "client-template-Url": "[uri(deployment().properties.templateLink.uri, concat(variables('Vnet/Subnet'),'-vnet-gluster-client.json'))]",
    "networkSettings": {
      "addressPrefix": "10.0.0.0/20",
      "glusterSubnetPrefix": "10.0.0.0/21",
      "glustersubnetRef": "[concat('/subscriptions/', subscription().subscriptionId,'/resourceGroups/',variables('rgname'), '/providers/Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'), '/subnets/', variables('subnetName'))]"
    },

    "PremiumStorageMap": {
      "P10": {
        "size": 128
      },
      "P20": {
        "size": 512
      },
      "P30": {
        "size": 1023
      }
    },
    "image": "[parameters('VMImage')]",
    "glusterNodeSettings": {
      "VMsku": "[parameters('VMSize')]",
      "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
      "vnetRG": "[variables('rgname')]",
      "vnetName": "[variables('virtualNetworkName')]",
      "subnetName": "[variables('subnetName')]"
    },
    "computeNodeImages": {
      "CentOS_7.2": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.2",
        "version": "latest"
      },
      "CentOS_7.3": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.3",
        "version": "latest"
      },
      "RHEL_7.2": {
        "publisher": "RedHat",
        "offer": "RHEL",
        "sku": "7.2",
        "version": "latest"
      }
    },
    "nodeOSSettings": {
      "adminUserName": "[parameters('adminUserName')]",
      "sshKeyData": "[parameters('sshKeyData')]",
      "imageReference": "[variables('computeNodeImages')[variables('image')]]"
    },
    "computeApiVersion": "2016-04-30-preview",
    "vnetID": "[resourceId(variables('glusterNodeSettings').vnetRG, 'Microsoft.Network/virtualNetworks', variables('glusterNodeSettings').vnetName)]",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/', variables('glusterNodeSettings').subnetName)]",
    "sshKeyPath": "[concat('/home/',variables('nodeOSSettings').adminUserName,'/.ssh/authorized_keys')]",
    "glusterInstall": "[concat('bash install_gluster.sh ', 'gluster000000', ' client')]"
  },
  "resources": [
    {
      "apiVersion": "[variables('deploymentApiVersion')]",
      "name": "clientlinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[variables('client-template-Url')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmssName": { "value": "[parameters('vmssName')]" },
          "nodeCount": { "value": "[parameters('nodeCount')]" },
          "VMSize": { "value": "[parameters('VMSize')]" },
          "VMImage": { "value": "[parameters('VMImage')]" },
          "Vnet/Subnet": { "value": "[parameters('Vnet/Subnet')]" },
          "new/existingVnetName": { "value": "[parameters('new/existingVnetName')]" },
          "new/existingSubnetName": { "value": "[parameters('new/existingSubnetName')]" },
          "subnetPrefix": { "value": "[parameters('subnetPrefix')]" },
          "addressPrefix": { "value": "[parameters('addressPrefix')]" },
          "masterName": { "value": "[parameters('masterName')]" },
          "adminUsername": { "value": "[parameters('adminUsername')]" },
          "sshKeyData": { "value": "[parameters('sshKeyData')]" }
        }
      }
    }
  ]

}